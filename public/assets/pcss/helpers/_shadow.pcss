/*-------------------------------------------
  -- Shadow
-------------------------------------------*/
:root {
  /* Box shadow */
  --bs-sm: 0 2px 5px rgba(#000, 0.1);
  --bs-md: 0px 3px 15px rgba(#000, 0.15);
  --bs-lg: 0px 5px 25px rgba(#000, 0.25);
}

.gtn-shadow__sm {
  box-shadow: var(--bs-sm);
}
.gtn-shadow__md {
  box-shadow: var(--bs-md);
}
.gtn-shadow__lg {
  box-shadow: var(--bs-lg);
}
.gtn-shadow__none {
  box-shadow: none !important;
}
