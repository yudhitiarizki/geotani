/*-------------------------------------------
  -- List
-------------------------------------------*/
ul {
  line-height: 42px;

  &.gtn-list-colored-bullets {
    list-style: none;
    padding-left: 0;
    li {
      &:before {
        text-shadow: 0 0 8px rgba(var(--color-primary), 0.8);
        content: "â€¢";
        color: var(--color-primary);
        vertical-align: middle;
        font-size: 28px;
        padding-right: 12px;
      }
    }
  }
  &.gtn-list-divided {
    list-style: none;
    padding-left: 0;
    li {
      border-bottom: 1px solid var(--color-grey-light);
      padding-bottom: 5px;
      padding-top: 5px;
      &:last-child {
        border-bottom: none;
      }
    }
  }

  &.gtn-list-check-marks {
    list-style: none;
    padding-left: 0;
    li {
      position: relative;
      padding-left: 24px;
      color: var(--color-text-light);
    }
    .gtn-checked {
      color: var(--color-black);
      &:before {
        color: var(--color-primary);
        content: "\f00c";
        font-family: "Font Awesome 5 Free";
        font-weight: 900;
        left: 0;
        position: absolute;
      }
    }
  }
  &.gtn-list-icons {
    list-style: none;
    padding-left: 0;
    color: var(--color-text-light);
    i {
      margin-right: 8px;
    }
  }
}
