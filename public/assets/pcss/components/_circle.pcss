.gtn-circle {
  align-items: center;
  backface-visibility: hidden;
  border-radius: var(--br-circle);
  display: inline-flex;
  justify-content: center;
  padding: 50%;
  position: relative;
  text-align: center;
  overflow: hidden;

  > * {
    line-height: 0;
    position: absolute;
    width: 100%;
  }
}
