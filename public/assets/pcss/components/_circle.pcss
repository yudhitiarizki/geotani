/*-------------------------------------------
  -- Circle
-------------------------------------------*/
.gtn-circle__xs {
  border-radius: var(--br-circle);
  display: inline-block;
  height: 48px;
  flex: 0 0 48px;
  overflow: hidden;
  text-align: center;
  line-height: 48px;
  width: 48px;
}
